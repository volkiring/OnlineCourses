@model (Teacher teacher, List<Specialty> specialties)

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h3 class="text-center mb-4">Изменение преподавателя</h3>

    <form method="post" id="teacherForm" novalidate>
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="mb-3">
                    <label class="form-label">Имя *</label>
                    <input type="text" class="form-control" name="UserName" value="@Model.Item1.UserName" required>
                    <div class="invalid-feedback">Пожалуйста, укажите имя</div>
                </div>


                <div class="mb-3">
                    <label class="form-label">Специальность</label>
                    <select name="specialtyId" class="form-select" required>

                        <option value="">-- Выберите специльность --</option>
                        @foreach (var specialty in Model.specialties)
                        {
                            <option value="@specialty.Id">@specialty.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Дата рождения</label>
                    <input type="date" class="form-control" name="Birthdate" id="Birthdate"
                           value="@Model.Item1.Birthdate?.ToString("yyyy-MM-dd")">
                    <div class="invalid-feedback">Дата не может быть в будущем</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Item1.Email">
                    <div class="invalid-feedback">Введите корректный email</div>
                </div>


                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit"
                            asp-controller="Teachers" asp-action="ConfirmEditTeacher" asp-route-teacherId="@Model.Item1.Id">
                        <i class="fas fa-user-edit me-2"></i>Изменить преподавателя
                    </button>
                </div>

            </div>
        </div>
    </form>
</div>

<script>
    document.getElementById('Birthdate').max = new Date().toISOString().split('T')[0];

    document.getElementById('teacherForm').addEventListener('submit', function (event) {
        const form = event.target;
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
</script>

@using EfDbOnlineCourses.Models
@model List<Teacher>

@{
    ViewData["Title"] = "Список преподавателей";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-person-badge-fill me-2"></i>Список преподавателей</h3>
            <a asp-action="AddTeacher" asp-controller="Teachers" class="btn btn-light btn-sm">
                <i class="bi bi-plus-lg"></i> Добавить преподавателя
            </a>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Имя</th>
                                <th>Email</th>
                                <th>Специальность</th>
                                <th>Дата рождения</th>
                                <th>Курсы</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model)
                            {
                                <tr>
                                    <td><strong>@teacher.Name</strong></td>
                                    <td>@(teacher.User.Email ?? "Не указан")</td>
                                    <td>@(teacher.Specialty ?? "Не указана")</td>
                                    <td>
                                        @if (teacher.Birthdate.HasValue)
                                        {
                                            @teacher.Birthdate.Value.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Не указана</span>
                                        }
                                    </td>
                                    <td>
                                        @if (teacher.Courses.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var course in teacher.Courses)
                                                {
                                                    <span class="badge bg-info">@course.Title</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Нет курсов</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="EditTeacher" asp-route-teacherId="@teacher.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DeleteTeacher" asp-route-teacherId="@teacher.Id" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Нет преподавателей. Хотите <a asp-action="AddTeacher" asp-controller="Teachers" class="alert-link">добавить преподавателя</a>?
                </div>
            }
        </div>
    </div>
</div>

@model List<EfDbOnlineCourses.Models.Specialty>

@{
    ViewData["Title"] = "Список специальностей";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-award-fill me-2"></i>Список специальностей</h3>
            <a asp-action="AddSpecialty" class="btn btn-light btn-sm">
                <i class="bi bi-plus-lg"></i> Добавить специальность
            </a>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Название</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var specialty in Model)
                            {
                                <tr>
                                    <td><strong>@specialty.Name</strong></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="UpdateSpecialty" asp-route-specialtyId="@specialty.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Нет специальностей. Хотите
                    <a asp-action="AddSpecialty" class="alert-link">добавить?</a>
                </div>
            }
        </div>
    </div>
</div>

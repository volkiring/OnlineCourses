@model string 
@{
    ViewData["Title"] = "Запись на курс";
}

<div class="container mt-5">
    <div class="alert alert-success text-center shadow-sm py-4">
        <h4 class="mb-3">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            Вы успешно записались на курс!
        </h4>
        <p class="fs-5 mb-4 fw-semibold">@Model</p>
        <a asp-action="Index" asp-controller="Courses" asp-area="" class="btn btn-primary" asp-route-userName="@User.Identity.Name">
            <i class="bi bi-journal-bookmark me-1"></i> Перейти к моим курсам
        </a>
    </div>
</div>

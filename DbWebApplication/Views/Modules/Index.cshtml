@model Module
@{
    ViewData["Title"] = "Модуль: " + Model.Title;
}
<h2>@Model.Title</h2>

<a asp-action="CreateLesson" asp-route-moduleId="@Model.Id" class="btn btn-primary mb-3">Добавить урок</a>

<ul class="list-group">
    @foreach (var lesson in Model.Lessons)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <h5>@lesson.Title</h5>
                <p>@lesson.Content</p>
            </div>
            <div>
                <a asp-action="EditLesson" asp-route-id="@lesson.Id" class="btn btn-sm btn-outline-primary me-1">Редактировать</a>
                <form asp-action="DeleteLesson" asp-route-id="@lesson.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить урок?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                </form>
            </div>
        </li>
    }
</ul>
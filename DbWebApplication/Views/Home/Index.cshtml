@{
    ViewData["Title"] = "Главная страница";
}
@using EfDbOnlineCourses.Models
@model List<Course>

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">


<div class="container py-4">
    <h2 class="text-center mb-5 fw-bold" style="color: #4a90e2;">Каталог курсов</h2>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        @if (!string.IsNullOrEmpty(course.ImagePath))
                        {
                            <img src="@course.ImagePath" class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" alt="Изображение курса">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold">@course.Title</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @(!string.IsNullOrWhiteSpace(course.Description) ? course.Description : "Описание отсутствует")
                            </p>

                            <p class="mb-2">
                                <small class="text-secondary">
                                    <strong>Старт:</strong> @course.StartDate?.ToString("dd.MM.yyyy")<br />
                                    <strong>Финиш:</strong> @course.EndDate?.ToString("dd.MM.yyyy")
                                </small>
                            </p>

                            <a asp-action="Details" asp-route-courseId="@course.Id" class="btn btn-primary w-100 mt-auto">
                                <i class="bi bi-info-circle me-1"></i> Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            Курсы отсутствуют.
        </div>
    }
</div>

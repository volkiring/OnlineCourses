@model Course

@{
    ViewData["Title"] = "Детали курса";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">


<div class="container py-5">
    <div class="card detail-card">
        <!-- Контейнер для изображения -->
        <div class="detail-image-container">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content(Model.ImagePath)"
                     alt="Изображение курса @Model.Title" />
            }
            else
            {
                <i class="bi bi-image fs-1 text-muted"></i>
            }
        </div>

        <div class="detail-body">
 
            <h2 class="fw-bold">@Model.Title</h2>

            <h3>Описание</h3>
            <p>@Model.Description</p>

            <h3>Информация</h3>
            <ul class="list-unstyled detail-list mb-3">
                <li><strong>Дата начала:</strong> @Model.StartDate?.ToString("dd.MM.yyyy")</li>
                <li><strong>Дата окончания:</strong> @Model.EndDate?.ToString("dd.MM.yyyy")</li>
            </ul>

            <h3>Преподаватели</h3>
            @if (Model.Teachers?.Any() == true)
            {
                <ul class="list-unstyled detail-list mb-3">
                    @foreach (var teacher in Model.Teachers)
                    {
                        <li class="d-flex justify-content-between">
                            <span>@teacher.Name</span>
                            <small class="text-muted">@teacher.Specialty</small>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">Нет преподавателей.</p>
            }

            <h3>Студенты</h3>
            @if (Model.Students?.Any() == true)
            {
                <ul class="list-unstyled detail-list mb-3">
                    @foreach (var student in Model.Students)
                    {
                        <li>@student.Name (@student.User.Email)</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">Нет студентов.</p>
            }

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" asp-controller="Home" asp-area ="" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Назад к курсам
                </a>
                <a asp-controller="Courses" asp-action="AddStudentToCourse" asp-route-courseId="@Model.Id" asp-area="" class="btn btn-primary">
                    <i class="bi bi-cart-plus me-1"></i> Записаться на курс
                </a>
            </div>
        </div>
    </div>
</div>
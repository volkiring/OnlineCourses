@model Lesson

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-primary text-white py-3">
            <h2 class="h5 mb-0">
                <i class="bi bi-journal-text me-2"></i> @Model.Title
            </h2>
        </div>
        <div class="card-body p-4">
            @if (!string.IsNullOrWhiteSpace(Model.Content))
            {
                <div class="card-text" style="white-space: pre-line; line-height: 1.6;">
                    @Html.Raw(Model.Content)
                </div>
            }
            else
            {
                <div class="text-center text-muted fst-italic py-5">
                    Содержимое пока отсутствует.
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-5">
        <a asp-action="Details" asp-controller="Courses" asp-route-courseId="@Model.Module.Course.Id"
           class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Назад к курсу
        </a>
    </div>
</div>

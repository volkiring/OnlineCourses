@model Request

@{
    ViewData["Title"] = "Подать заявку";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-journal-plus me-2"></i>Новая заявка</h4>
        </div>
        <div class="card-body">
            <form asp-action="ConfirmAdd" method="post" asp-route-userName="@User.Identity.Name">
                <div class="mb-3">
                    <label class="form-label">Тип заявки</label>
                    <select name="Type.Id" class="form-select" required>
                        <option value="">-- Не указана --</option>
                        @foreach (var rt in ViewBag.RequestTypes as List<RequestType>)
                        {
                            <option value="@rt.Id">@rt.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Сообщение</label>
                    <textarea name="Message" class="form-control" rows="4" placeholder="Дополнительная информация (необязательно)"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Специальность (если применимо)</label>
                    <select name="Specialty.Id" class="form-select">
                        <option value="">-- Не указана --</option>
                        @foreach (var sp in ViewBag.Specialties as List<Specialty>)
                        {
                            <option value="@sp.Id">@sp.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-send-fill me-1"></i> Отправить заявку
                </button>
            </form>
        </div>
    </div>
</div>

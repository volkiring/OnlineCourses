<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Учебный портал</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DbWebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-action = "Index" asp-controller="Home">
                    <i class="bi bi-book-half me-2"></i>Учебный портал
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-action="Index" asp-controller="Courses">
                                <i class="bi bi-journal-bookmark me-1"></i>Курсы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-action="Index" asp-controller="Students">
                                <i class="bi bi-people me-1"></i>Студенты
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-action="Index" asp-controller="Teachers">
                                <i class="bi bi-person-badge me-1"></i>Преподаватели
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@User.Identity.Name</li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-action ="Logout" asp-controller="Account">Выйти</a>
                            </li>

                        }

                        else
                        {
                            <li class="nav-item">
                                <a class ="nav-link nav-link-custom" asp-action="Login" asp-controller="Account">Авторизироваться</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - Учебный портал. Все права защищены.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>